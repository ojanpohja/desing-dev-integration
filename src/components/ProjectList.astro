---
const { items } = Astro.props; // [{ slug, data: { title, summary, date } }]
const base = import.meta.env.BASE_URL;
---
<div class="grid" style="grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));">
{items.map((p) => <fragment>
<a class="card" href={`${base}projects/${p.slug}/`}>
<h3>{p.data.title}</h3>
{p.data.summary && <p>{p.data.summary}</p>}
{p.data.date && <small>{new Date(p.data.date).toLocaleDateString()}</small>}
</a>
</fragment>)}
</div>