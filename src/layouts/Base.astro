---
import '../styles/site.css';
import '../styles/tokens.css';

const { title = 'Portfolio', description = 'Projects and writings' } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="theme-light">
    <header class="container">
      <nav class="grid" style="grid-template-columns: auto 1fr auto; align-items:center;">
        <a href={base} style="font-weight:700">Home</a>
        <div></div>
        <a class="button" href={`${base}projects/`}>Projects</a>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="container" style="margin-top:4rem;">
      <small>© {new Date().getFullYear()} • Built with Astro • Content via Markdown • Tokens from Figma</small>
    </footer>
  </body>
</html>
