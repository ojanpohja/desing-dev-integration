{
  "core": {
    "colors": {
      "primary": { "$type": "color", "$value": "#4f86ff" }
    },
    "spacing": {
      "xs": { "$type": "dimension", "$value": 4 },
      "sm": { "$type": "dimension", "$value": 8 },
      "md": { "$type": "dimension", "$value": 16 },
      "lg": { "$type": "dimension", "$value": 24 },
      "xl": { "$type": "dimension", "$value": 32 }
    },
    "radius": {
      "sm": { "$type": "dimension", "$value": 6 },
      "md": { "$type": "dimension", "$value": 10 },
      "lg": { "$type": "dimension", "$value": 16 }
    },
    "fontSizes": {
      "sm": { "$type": "dimension", "$value": 14 },
      "md": { "$type": "dimension", "$value": 16 },
      "lg": { "$type": "dimension", "$value": 20 },
      "xl": { "$type": "dimension", "$value": 28 }
    },
    "fontFamily": {
      "base": { "$type": "fontFamily", "$value": "Inter, system-ui, Avenir, Helvetica, Arial, sans-serif" }
    }
  },
  "brand": {
    "palette": {
      "primary-scale": {
        "$type": "color[]",
        "$value": ["#e7eeff","#cbdcff","#a9c5ff","#87adff","#6998ff","#4f86ff","#3a79ff","#2b6df5","#245fe0","#1b4bb8"]
